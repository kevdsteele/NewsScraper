<html>
  <head>
    <% include ../partials/header.ejs %>
  </head>

  <body>
    <% include ../partials/nav.ejs %>
<!--Message Modal-->
    <div class="modal" id="message-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Message</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <p id="message-text"></p>
            </div>
            <div class="modal-footer">
              
              <button type="button" class="btn btn-secondary modal-close" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

     <!--Comments modal--> 

     <!--Comment Modal-->
    <div class="modal" id="comments-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Comments </h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body" id="article-comments">
               

            </div>

            <!--Add a comment-->

            <div class="modal-header">
                <h5 class="modal-title">Add a comment </h5>
              
              </div>
              <div class="modal-body">
                  <form class="w-100">
                 
                      <div class="form-group">
                        
                        <textarea class="form-control " id="new-comment" rows="5"></textarea>
                      </div>
                
                      <button type="submit" id="submit-comment" class="btn btn-primary">Submit</button>
                  </form>
  
              </div>
            <div class="modal-footer">
              
                <button type="button" class="btn btn-secondary modal-close" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>





    <div class="container mt-4">
    <div class="row ">

    <div class="col-md-3">
      <h4>Scrape Results </h4>
    </div>  
    <div class="col-md-1">
     
    </div>
    <div class="col-md-8">
     <h4>Article Details</h4>
      </div>
   
    </div>

    <div class="row">

      
    <div class="col-md-3" id="article-thumb">
      
      <div id="top"></div>
      
    </div>
    <div class="col-md-9">
      <div class="row" >
        <div class="col-md-1">

        </div>

        <div class="col-md-11">

            <div class="card text-left d-none" id="article-results">
                <div class="card-header" id="article-title">
                  
                </div>
                <div class="card-body" id="article-full">
     
                </div>
                <div class="card-footer" id="article-footer">
               
              </div>

        </div>
      

      </div>

     

    </div>
    
    </div>
